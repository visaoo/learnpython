{
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Bearded Theme Black & Amethyst",
  "workbench.activityBar.location": "top",
  "workbench.reduceMotion": "off",
  "files.autoSave": "afterDelay",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.minimap.autohide": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.smoothScrolling": true,
  "editor.tabCompletion": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "apc.font.family": "JetBrains Mono",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 14,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "notebook.formatOnSave.enabled": true,
  "editor.formatOnSave": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 1,
  "editor.cursorStyle": "line-thin",
  "code-runner.runInTerminal": true,
  // "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    "python": "& C:/Users/visao/AppData/Local/Programs/Python/Python313/python.exe",
  },
  "local-history.absolute": true,
  "local-history.saveDelay": 9,
  "local-history.exclude": [
    "**/.history/**",
    "**/.vscode/**",
    "**/node_modules/**",
    "**/typings/**",
    "**/out/**",
    "**/Code/User/**"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.wordBasedSuggestions": "currentDocument"
  },
  "code-runner.showRunCommandInEditorContextMenu": true,
  "terminal.integrated.focusAfterRun": "terminal"
}
